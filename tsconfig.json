{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "removeComments": true,
        // strictness
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictPropertyInitialization": true,
        // module resolution
        "allowSyntheticDefaultImports": false,
        "allowUmdGlobalAccess": false,
        "esModuleInterop": true,
        "baseUrl": "./",
        "importHelpers":true,
        "moduleResolution": "node",
        // source maps
        "inlineSources": false,
        "sourceMap": true,
            // sourceRoot: <dont specify>
            // mapRoot: <dont specify>

        // linter checks
        "noFallthroughCasesInSwitch": false,// fall through is ok
        "noImplicitReturns": true,

        // unexamined part
        "noLib": false,
        "noUnusedLocals": true,
        "newLine": "LF",
        "noEmit": true,
        "listEmittedFiles": true,
        "allowUnreachableCode": false,
        
        "lib": [
            "es2020"          
        ],
        "target": "es2016",
        
      
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude":[
        "src/**/doc.ts"
    ],
    "typeAcquisition": {
        "enable": true
    }
}